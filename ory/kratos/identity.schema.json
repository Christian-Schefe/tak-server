{
  "$id": "https://schemas.myapp.dev/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "username": {
          "type": "string",
          "minLength": 3,
          "maxLength": 32,
          "pattern": "^[a-zA-Z0-9_]+$"
        },
        "display_name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        }
      },
      "required": ["username", "display_name"]
    }
  }
}
