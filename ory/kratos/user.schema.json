{
  "$id": "https://schemas.playtak.com/user.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "minLength": 4,
          "maxLength": 32,
          "title": "Username",
          "pattern": "^[a-zA-Z0-9_]+$",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
        "display_name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64,
          "title": "Display Name",
          "pattern": "^[\\p{L}\\p{N}][\\p{L}\\p{N} .,'-]+$"
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "webauthn": {
                "identifier": true
              },
              "totp": {
                "account_name": true
              },
              "code": {
                "identifier": true,
                "via": "email"
              },
              "passkey": {
                "display_name": true
              }
            },
            "recovery": {
              "via": "email"
            },
            "verification": {
              "via": "email"
            }
          },
          "maxLength": 320
        }
      },
      "required": ["username", "display_name"],
      "additionalProperties": false
    }
  }
}
